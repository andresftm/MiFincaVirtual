@model MiFincaVirtual.Backend.Models.ordenosPaginados

@{
    ViewBag.Title = "Index";
}

<h2>Ordeños</h2>

@using (Html.BeginForm(null, null, FormMethod.Get))
{
    <label for="edad">Nombre</label>
    <input type="text" name="animal" id="aimal" />
    <input type="submit" value="Consultar" class="btn btn-success" />
    @Html.ActionLink("Registrar Ordeño", "Create", new { }, new { @class = "btn btn-primary" })
}
<p>
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            # Ordeño
        </th>
        <th>
            Litros
        </th>
        <th>
            Peso
        </th>
        <th>
            Gramos
        </th>
        <th>
            Fecha
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrdenosO)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoAnimal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroOrdeno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LitrosOrdeno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PesoOrdeno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GramosCuidoOrdeno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaOrdeno)
        </td>
        <td>
            @Html.ActionLink("Detalle", "Details", new { id = item.OrdenoId }, new { @class = "btn btn-info" })
        </td>
    </tr>
    }

</table>
@{Html.RenderPartial("_paginador", Model);}
