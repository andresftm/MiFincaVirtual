@model IEnumerable<MiFincaVirtual.Common.Models.Opciones>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de opciones</h2>

<p>
    @Html.ActionLink("Registrar opción", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigopcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionOpcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoOpcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigopcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionOpcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoOpcion)
        </td>
        <td>
            @Html.ActionLink("E", "Edit", new { id=item.OpcionId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("C", "Details", new { id=item.OpcionId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("D", "Delete", new { id=item.OpcionId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
