@model IEnumerable<MiFincaVirtual.Common.Models.Razas>

@{
    ViewBag.Title = "Razas";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Registrar razas", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreRaza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionRaza)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreRaza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionRaza)
        </td>
        <td>
            @Html.ActionLink("E", "Edit", new { id=item.RazaId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("C", "Details", new { id=item.RazaId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("D", "Delete", new { id=item.RazaId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
