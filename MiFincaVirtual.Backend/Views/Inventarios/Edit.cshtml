@model MiFincaVirtual.Backend.Models.InventariosView

@{
    ViewBag.Title = "Edit";
}

<h2>Editar inventario</h2>

@using (Html.BeginForm("Edit", "Inventarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Inventarios</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.InventarioId)

