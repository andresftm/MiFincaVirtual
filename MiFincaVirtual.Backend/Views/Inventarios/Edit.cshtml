            @Html.EditorFor(model => model.PrecioInventario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PrecioInventario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FleteInventario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FleteInventario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FleteInventario, "", new { @class = "text-danger" })
        </div>
    </div>

