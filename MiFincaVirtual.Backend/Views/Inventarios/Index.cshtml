@model IEnumerable<MiFincaVirtual.Common.Models.Inventarios>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Opciones.Codigopcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FleteInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorUnitarioInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotalInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepartidoInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Opciones.Codigopcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaIngreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadInventario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioInventario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FleteInventario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorUnitarioInventario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotalInventario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepartidoInventario)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ImagePath))
            {
                <img src="@Url.Content(item.ImagePath)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.ActionLink("E", "Edit", new { id=item.InventarioId }) |
            @Html.ActionLink("C", "Details", new { id=item.InventarioId }) |
            @Html.ActionLink("D", "Delete", new { id=item.InventarioId })
        </td>
    </tr>
}

</table>
